			<taglib-location>/WEB-INF/tags/jcCacheTag.tld</taglib-location>
		</taglib>
		
		<taglib>
			<taglib-uri>http://www.jiaoxueyun.com/cache/jc/functions</taglib-uri>
			<taglib-location>/WEB-INF/tags/JcCacheFunctions.tld</taglib-location>
		</taglib>
		
